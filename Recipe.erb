cd /

# Get helper functions
wget -q https://github.com/probonopd/AppImages/raw/master/functions.sh -O ./functions.sh
. ./functions.sh
rm -f functions.sh

mkdir /<%= name %>.AppDir/

wget https://github.com/probonopd/linuxdeployqt/releases/download/1/linuxdeployqt-1-x86_64.AppImage
chmod a+x linuxdeployqt-1-x86_64.AppImage

cd /<%= name %>.AppDir
mkdir -p ./usr/bin; mv /app/usr/bin/*<%= name %>* $_
cp /app/usr/share/applications/*<%= name %>*.desktop <%= name %>.desktop
mkdir -p ./usr/share/applications/; mv /app/usr/share/applications/*<%= name %>*.desktop $_
cp /app/usr/share/icons/hicolor/scalable/apps/*<%= name %>* .
mkdir -p ./usr/share/icons/hicolor; mv /app/usr/share/icons/hicolor $_

#KDE files
mkdir -p ./usr/lib/; mv /app/usr/lib/* $_
mkdir -p ./usr/share/kservices5; mv /app/usr/share/kservices5/* $_
mkdir -p ./usr/share/kservicetypes5; mv /app/usr/share/kservicetypes5/* $_
mkdir -p ./usr/share/kxmlgui5; mv /app/usr/share/kxmlgui5/* $_
mkdir -p ./usr/share/metainfo; mv  /app/usr/share/metainfo/* $_
mkdir -p ./etc/xdg; mv /app/etc/xdg/* $_
mkdir -p ./usr/share/config.kcfg; mv /app/usr/share/config.kcfg/* $_
mkdir -p ./usr/share/mime/packages; mv /app/usr/share/mime/packages/* $_

../linuxdeployqt-1-x86_64.AppImage ./usr/bin/<%= name %> -verbose=3 -bundle-non-qt-libs -qmldir=/opt/usr/qml

glibc_needed
patch_usr
delete_blacklisted
get_apprun
get_desktopintegration <%= name %>

# Until this repo stabilizes we will use the appimage.
# Build AppImageKit

wget "https://github.com/probonopd/AppImageKit/releases/download/continuous/appimagetool-x86_64.AppImage"
chmod a+x appimagetool-x86_64.AppImage

ARCH=$(arch)
DATE=$(date +"%m%d%Y")

APPIMAGEFILENAME="<%= name %>-git$DATE-$ARCH.AppImage"

./appimagetool-x86_64.AppImage /<%= name %>.AppDir /appimage/$APPIMAGEFILENAME
